<div class="form_head">
    <h2>ひとこと</h2>
</div>

<%= form_for @msg,:url => {controller: "onemessages", action: "edit"} do |f| %>

<% if @msg.errors.any? %>
<div id="error_explanation">
    <ul>
        <% @msg.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :message, "ひとこと" %><br />
    <%= f.text_area :message %>
</div>

<div class="actions">
    <%= f.submit "保存" %>
</div>

<% end %>