<% p_cmt.each do |cmt| %>
<% user = User.find(cmt.c_uid) %>

<li class="comment_wrap clearfix" id="comment_id_<%= cmt.id %>">

    <%= link_to "/#{user.userid}", class: "comment_user" do %>
    <span class="com_l"><%= image_tag "#{user.userimg.m}" %></span>
    <span class="com_r">
        <span>
            <% if user.username.empty? %>
            <%= user.userid %>
            <% else %>
            <%= user.username %>
        </span>
        <span><%= user.userid %></span>
        <% end %>
    </span>
    <% end %>
    <p class="comment_content">
        <%= safe_join(cmt.comment.split("\n"),tag(:br)) %>
        <span class="date"><%= l cmt.created_at, format: "%Y-%m-%d" %></span>

        <% if user.id == current_user.id %>
        <span class="cmt_in_edit">Edit</span>
        <%= link_to "削除", "/c/#{cmt.id}/destroy", class: 'cmt_dlete_btn', data: {confirm: "本当に削除しますか？"} %>
        <% end %>
    </p>


    <% if user.id == current_user.id %>

    <%= form_tag "/c/#{cmt.id}/edit", :method => 'patch', class: "comment_edit" do %>
    <div class="field">
        <textarea name="comment" id="comment"><%= cmt.comment %></textarea>
    </div>
    <label>
        <button type="submit"></button>
        <span class="cmt_send_btn"><i class="fas fa-paper-plane"></i></span>
    </label>
    <span class="cmt_close_btn">キャンセル</i></span>
    <% end %>

    <% end %>



    <%
=begin%>
    <%= form_for cmt,:url => {controller: "comments", action: "edit"} do |f| %>

    <div class="field">
        <%= f.label :comment, "コメント" %>
        <%= f.text_area :comment, value: "#{safe_join(cmt.comment.split("\n"),tag(:br))}" %>
    </div>

    <div class="actions">
        <%= f.submit "保存" %>
    </div>

    <% end %>
    <%
=end%>




</li>

<% end %>