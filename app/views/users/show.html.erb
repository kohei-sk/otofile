<h1>Users#show</h1>

<% if user_signed_in? %>
<%= link_to 'プロフィール変更', edit_user_registration_path %>
<% end %>

<p><%= image_tag "#{@user.userimg}" %></p>

<% if @user.username.empty? %>
<%= @user.userid %>
<% else %>
<%= @user.username %>
<% end %>

<p><%= @user.userid %></p>

<% if @user.profile.present? %>
<p><%=safe_join(@user.profile.split("\n"),tag(:br))%></p>
<% end %>