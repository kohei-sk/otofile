<!DOCTYPE html>
<html>

<head>
    <title>OTOFILE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flickity/2.2.0/flickity.min.css" />




</head>

<body>

    <div class="container clearfix">

        <header class="clearfix">
            <nav class="clearfix">
                <%= link_to "/", data: {'turbolinks' => false}, class: "nav_logo" do %>
                <%= image_tag "logo.svg" %>
                <% end %>

                <div class="nav_btn_wrapper">

                    <a class="nav_btn search search_btn_trriger"></a>
                    <%= link_to '', "/#{current_user.userid}", data: {'turbolinks' => false}, class: 'nav_btn prf' if user_signed_in? %>

                    <a class="nav_btn_trriger"><span></span><span></span><span></span></a>
                </div>
                <div class="nav_content clearfix">
                    <% if user_signed_in? %>
                    <%= link_to 'ホーム', root_path, data: {'turbolinks' => false}, class: "nav_home" %>
                    <%= link_to 'ひとこと', "/m/new", data: {'turbolinks' => false}, class: "nav_msg" %>
                    <%= link_to 'アクティビティ', '/p/new', data: {'turbolinks' => false}, class: "nav_act" %>
                    <%= link_to 'アカウント設定', edit_user_registration_path, data: {'turbolinks' => false}, class: 'nav_setting' %>
                    <%= link_to 'ログアウト', destroy_user_session_path, data: {'turbolinks' => false}, class: "nav_signout", method: :delete %>
                    <%= link_to 'お問い合わせ', '#', data: {'turbolinks' => false}, class: "nav_contact" %>

                    <% else %>
                    <%= link_to 'アカウント登録', new_user_registration_path, data: {'turbolinks' => false}, class: "nav_signup" %>
                    <%= link_to 'ログイン', new_user_session_path, data: {'turbolinks' => false}, class: "nav_signin" %>
                    <%= link_to 'お問い合わせ', '#', data: {'turbolinks' => false}, class: "nav_contact" %>
                    <% end %>
                </div>
                <div class="search_content">

                    <ul class="tab-group">
                        <li class="tab is-active">User</li>
                        <li class="tab">Profile</li>
                        <li class="tab">Activity</li>
                    </ul>

                    <div class="panel-group">

                        <div class="panel is-show">
                            <div class="head_search_wrapper clearfix">
                                <%= form_tag "/search/check", :method => 'get', class: "head_search" do %>
                                <%= text_field_tag :u_search, params[:u_search] %>
                                <%= label_tag do %>
                                <%= submit_tag "", :name => nil %>
                                <i class="fas fa-search"></i>
                                <% end %>
                                <% end %>
                            </div>
                        </div>

                        <div class="panel">
                            <div class="head_search_wrapper clearfix">
                                <%= form_tag "/search/check", :method => 'get', class: "head_search" do %>
                                <%= text_field_tag :pr_search, params[:pr_search] %>
                                <%= label_tag do %>
                                <%= submit_tag "", :name => nil %>
                                <i class="fas fa-search"></i>
                                <% end %>
                                <% end %>
                            </div>
                        </div>

                        <div class="panel">
                            <div class="head_search_wrapper clearfix">
                                <%= form_tag "/search/check", :method => 'get', class: "head_search" do %>
                                <%= text_field_tag :p_search, params[:p_search] %>
                                <%= label_tag do %>
                                <%= submit_tag "", :name => nil %>
                                <i class="fas fa-search"></i>
                                <% end %>
                                <% end %>
                            </div>
                        </div>

                    </div>

                    <%= link_to 'Random search :D', u_random_path, class: 'search_btn_random' %>


                </div>
            </nav>


            <% if notice %>
            <p class="notice clearfix"><%= notice %></p>
            <% end %>
            <% if alert  %>
            <p class="alert clearfix"><%= alert %></p>
            <% end %>
        </header>

        <main class="clearfix">

            <%= yield %>

        </main>

    </div>

    <%= Gon::Base.render_data %>
    <%= javascript_include_tag 'application' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flickity/2.2.0/flickity.pkgd.min.js"></script>



</body>

</html>