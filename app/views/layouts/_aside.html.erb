<aside class="clearfix">

    <div class="aside_inner clearfix">

        <div class="rank_post_container clearfix">

            <% if !@rank_posts.nil? %>

            <h3><i class="far fa-heart"></i> トレンドランキング</h3>

            <div class="rank_post_wrapper clearfix">

                <% @rank_posts.each do |post| %>

                <% user = User.find(post.user_id) %>

                <%= link_to "/p/#{post.id}", class: 'rank_post_item clearfix' do %>

                <p class="rank_title">
                    <i class="far fa-heart"></i>
                    <span class="rank_count"><%= post.likes.length %></span>
                    <%= post.title %>
                </p>

                <% if post.img.present? %>
                <p class="rank_img"><%= image_tag "#{post.img}"%></p>
                <% end %>

                <% if post.ytid.present? %>
                <p class="rank_yt">
                    <svg height="100%" version="1.1" viewBox="0 0 68 48" width="100%">
                        <path class="ytp-large-play-button-bg" d="M66.52,7.74c-0.78-2.93-2.49-5.41-5.42-6.19C55.79,.13,34,0,34,0S12.21,.13,6.9,1.55 C3.97,2.33,2.27,4.81,1.48,7.74C0.06,13.05,0,24,0,24s0.06,10.95,1.48,16.26c0.78,2.93,2.49,5.41,5.42,6.19 C12.21,47.87,34,48,34,48s21.79-0.13,27.1-1.55c2.93-0.78,4.64-3.26,5.42-6.19C67.94,34.95,68,24,68,24S67.94,13.05,66.52,7.74z" fill="#212121" fill-opacity="0.8"></path>
                        <path d="M 45,24 27,14 27,34" fill="#fff"></path>
                    </svg>
                    <%= image_tag "http://img.youtube.com/vi/#{post.ytid}/maxresdefault.jpg" %>
                </p>
                <% end %>

                <p class="rank_user">
                    <span class="rank_userimg"><%= image_tag "#{user.userimg.m}" %></span>
                    <span class="rank_username">
                        <% if user.username.blank? %>
                        <%= user.userid %>
                        <% else %>
                        <%= user.username %>
                        <% end %>
                        <span><%= user.userid %></span>
                    </span>
                </p>

                <% end %>

                <% end %>

            </div>
            <% end %>

        </div>

        <%= render 'layouts/footer' %>

    </div>

</aside>