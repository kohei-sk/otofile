<div class="form_head">
    <h2>アクティビティ編集</h2>
</div>

<%= form_for @post,:url => {controller: "posts", action: "edit"} do |f| %>

<% if @post.errors.any? %>
<div id="error_explanation">
    <ul>
        <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, placeholder: "必須" %>
</div>

<div class="field">
    <%= f.label :comment, "コメント" %><br />
    <%= f.text_area :comment %>
</div>

<div class="actions">
    <%= f.submit "更新" %>
</div>

<%= link_to "削除", "/p/#{@post.id}/destroy", class: 'delete', data: {confirm: "本当に削除しますか？"} %>

<% end %>