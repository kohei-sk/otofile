<p>記事編集</p>



<% if @post.errors.any? %>
<ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @post,:url => {controller: "posts", action: "edit"} do |f| %>

<div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, placeholder: "必須です" %>
</div>

<div class="field">
    <%= f.label :comment, "コメント" %><br />
    <%= f.text_area :comment %>
</div>

<div class="actions">
    <%= f.submit "更新" %>
</div>

<% end %>